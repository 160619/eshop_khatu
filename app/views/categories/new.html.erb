<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <h1 class="text-center">Create category</h1>
      <%= form_for Category.new ,url: categories_path do |f| %>
        <%= render 'shared/error_messages', object: @category %>

        <div class="form-group row">
          <label for="staticName" class="col-sm-2 col-form-label">Name</label>

          <div class="col-sm-10">
            <%= f.text_field :name, class:'form-control',placeholder:"Enter category's name" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit 'Submit', class: "btn btn-info col-lg-12" %>
        </div>
      <% end %>
      <%= link_to 'Home', root_path %>
    </div>
  </div>
</div>
