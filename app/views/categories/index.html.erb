<div class="w-75 p-3">
  <div class="card-header">
    <div class="row">
      <div class="col-lg-9">
        <h3 class="text-center">Categories</h3>
      </div>

      <div class="col-lg-3">
        <%= link_to "Add Category", new_category_path, class: 'btn btn-info pull-right' %>
        <%= link_to "Back", root_path, class: 'btn btn-info pull-right' %>
      </div>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Number of products</th>
        <th>Creation time</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>&emsp;&emsp;&emsp;&emsp;<%= category.products.count %></td>
          <td><%= category.created_at %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>&emsp;&emsp;&emsp;&emsp;
              <%= link_to 'Delete', category_path(category),  method: :delete,
                                                        data: { confirm: 'Are you sure?' },
                                                        class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
