<p id="notice"><%= notice %></p>

<h1>Admin Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Review</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_comments.each do |comment| %>
      <tr>
        <td><%= admin_comment.content %></td>
        <td><%= admin_comment.review_id %></td>
        <td><%= admin_comment.user_id %></td>
        <td><%= link_to 'Show', admin_comment_path(admin_comment), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_admn_comment_path(admin_comment), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', admin_comment_pth(admin_comment), method: :delete,
                                            data: { confirm: 'Are you sure?' },
                                            class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Comment', new_admin_comment_path, class: 'btn btn-primary' %>
