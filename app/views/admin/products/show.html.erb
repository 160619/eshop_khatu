<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <center><h2><%= @product.product_name %></h2></center>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td rowspan="2"><strong>Aggregate Rating:</strong></td>
                <td id="aggregate_rating">
                  <% @product.aggregate_rating.to_i.times do %>
                    <span class="star">★</span>
                  <% end %>
                  <% (5 - @product.aggregate_rating.to_i).times do %>
                    <span class="out-of">★</span>
                  <% end %>&ensp;
                  <strong>
                    <% if @product.reviews.count == 0 %>
                      0/5
                    <% else %>
                      <%= @product.aggregate_rating %> / 5
                    <% end %>
                  </strong>
                </td>
              </tr>
              <tr>
                <td>
                  <i class="fas fa-user"></i>&ensp;
                  <em><%= "#{@product.reviews.count} reviews" %></em>
                </td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @product.desc %></td>
              </tr>
              <tr>
                <td><strong>Unit Price:</strong></td>
                <td>$<%= @product.unit_price %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Return to List products", admin_products_path, class: 'btn btn-primary' %> |
          <%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-primary' %> |
          <%= link_to 'Back', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
